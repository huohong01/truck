<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:yuyong="http://schemas.android.com/yuyong"
    android:orientation="vertical"
    android:layout_width="250dp"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <ImageView
        yuyong:yuyong_theme_type="src"
        android:id="@+id/favorites_dialog_avatar"
        android:layout_width="@dimen/avatar_large"
        android:layout_height="@dimen/avatar_large"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/empty_avatar"/>

    <TextView
        android:id="@+id/favorites_dialog_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/favorites_dialog_avatar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/unknown"
        android:textSize="@dimen/text_medium_large"
        android:textColor="@color/primary_txt_inverse"/>

    <ImageView
        yuyong:yuyong_theme_type="src"
        android:id="@+id/favorites_dialog_chat_btn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/favorites_dialog_name"
        android:layout_toStartOf="@+id/favorites_dialog_avatar"
        android:layout_marginEnd="-25dp"
        android:layout_marginTop="15dp"
        android:adjustViewBounds="true"
        android:src="@drawable/fav_chat"/>

    <ImageView
        yuyong:yuyong_theme_type="src"
        android:id="@+id/favorites_dialog_video_btn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/favorites_dialog_name"
        android:layout_toEndOf="@+id/favorites_dialog_avatar"
        android:layout_marginStart="-25dp"
        android:layout_marginTop="15dp"
        android:adjustViewBounds="true"
        android:src="@drawable/fav_video"/>
</RelativeLayout>