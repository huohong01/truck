<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:yuyong="http://schemas.android.com/yuyong"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <ImageView
        yuyong:yuyong_theme_type="src"
        android:id="@+id/chat_avatar"
        android:layout_width="@dimen/avatar_small"
        android:layout_height="@dimen/avatar_small"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:src="@drawable/empty_avatar"/>

    <TextView
        android:id="@+id/chat_avatar_letter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignStart="@+id/chat_avatar"
        android:layout_alignTop="@+id/chat_avatar"
        android:layout_alignEnd="@+id/chat_avatar"
        android:layout_alignBottom="@+id/chat_avatar"
        android:gravity="center"
        android:textColor="@color/secondary_txt_inverse"
        android:textSize="@dimen/text_large"/>

    <LinearLayout
        android:id="@+id/chat_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>

    <TextView
        android:id="@+id/chat_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chat_content"
        android:layout_alignParentBottom="true"
        android:textSize="@dimen/text_small"/>

    <TextView
        android:id="@+id/chat_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/chat_name"
        android:textSize="@dimen/text_small"/>
</RelativeLayout>