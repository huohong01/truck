<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlRegister"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/tvRegisterLabel"
    android:background="@color/bgGray">

    <RelativeLayout
        android:id="@+id/rlInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <EditText
            android:id="@+id/etFirstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_margin="@dimen/padding_10dp"
            android:digits="@string/text_digits"
            android:drawablePadding="@dimen/padding_15dp"
            android:ems="10"
            android:hint="@string/first_name"
            android:inputType="text"
            android:maxLength="20"
            android:padding="@dimen/padding_10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="@dimen/loginFontSize"
            android:theme="@style/MyEditTextBlackTheme" />

        <EditText
            android:id="@+id/etLastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etFirstName"
            android:digits="@string/text_digits"
            android:ems="10"
            android:hint="@string/last_name"
            android:inputType="text"
            android:maxLength="20"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="@dimen/loginFontSize"
            android:theme="@style/MyEditTextBlackTheme"
            android:layout_alignEnd="@+id/etFirstName"
            android:layout_alignStart="@+id/etFirstName" />


        <EditText
            android:id="@+id/etEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etLastName"
            android:digits="@string/email_digits"
            android:ems="10"
            android:hint="@string/email_label"
            android:inputType="textEmailAddress"
            android:maxLength="50"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="@dimen/loginFontSize"
            android:theme="@style/MyEditTextBlackTheme"
            android:layout_alignEnd="@+id/etLastName"
            android:layout_alignStart="@+id/etLastName" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/etEmail"
            android:layout_alignLeft="@+id/etEmail"
            android:layout_alignRight="@+id/etEmail"
            android:layout_alignStart="@+id/etEmail"
            android:layout_below="@+id/etEmail"
            android:digits="@string/password_digits"
            android:ems="10"
            android:hint="@string/password_label"
            android:inputType="textPassword"
            android:maxLength="20"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="@dimen/loginFontSize"
            android:theme="@style/MyEditTextBlackTheme" />



    </RelativeLayout>

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="wrap_content"
        android:text="@string/signup"
        android:layout_height="wrap_content"
        android:textSize="@dimen/buttonFontSize"
        android:textColor="@color/white"
        android:layout_margin="@dimen/padding_20dp"
        android:padding="@dimen/padding_20dp"
        android:layout_below="@+id/rlInput"
        android:background="@color/btnBackground"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <!--<com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/tvForgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/padding_15dp"
        android:padding="@dimen/padding_10dp"
        android:text="@string/forgot_password_label"
        android:textColor="@color/white"
        android:textSize="@dimen/smallFontSize"
        app:fontFamily="roboto"
        app:textWeight="normal"
        android:layout_below="@+id/btnSignUp"
        android:layout_centerHorizontal="true" />-->
</RelativeLayout>