<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlLoginDetails"
    android:layout_below="@+id/tvLoginLabel"
    android:layout_centerHorizontal="true"
    android:background="@color/bgGray"
    android:focusable="false"
    android:focusableInTouchMode="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rlInput"
        android:background="@color/white">

<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/etAccount"
    android:drawablePadding="@dimen/padding_15dp"
    android:textColor="@color/black"
    android:digits="@string/email_digits"
    android:maxLength="50"
    android:inputType="textEmailAddress"
    android:layout_margin="@dimen/padding_10dp"
    android:textColorHint="@color/black"
    android:padding="@dimen/padding_10dp"
    android:hint="@string/email_label"
    android:theme="@style/MyEditTextBlackTheme"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:textSize="@dimen/loginFontSize" />

<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/etPassword"
    android:maxLength="20"
    android:inputType="textPassword"
    android:digits="@string/password_digits"
    android:layout_below="@+id/etAccount"
    android:textColor="@color/black"
    android:theme="@style/MyEditTextBlackTheme"
    android:layout_margin="@dimen/padding_10dp"
    android:textColorHint="@color/black"
    android:padding="@dimen/padding_10dp"
    android:hint="@string/password_label"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:textSize="@dimen/loginFontSize"
    android:drawablePadding="@dimen/padding_15dp"/>


    </RelativeLayout>

    <Button
        android:id="@+id/btnSignIn"
        android:layout_width="wrap_content"
        android:text="@string/signIn"
        android:layout_height="wrap_content"
        android:textSize="@dimen/buttonFontSize"
        android:textColor="@color/white"
        android:layout_margin="@dimen/padding_20dp"
        android:padding="@dimen/padding_20dp"
        android:layout_below="@+id/rlInput"
        android:background="@color/btnBackground"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />



<!--    <com.devspark.robototextview.widget.RobotoTextView
        android:layout_width="match_parent"
