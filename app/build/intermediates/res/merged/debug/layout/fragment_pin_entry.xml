<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:yuyong="http://schemas.android.com/yuyong"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary">

    <TextView
        android:id="@+id/pin_top_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="@string/pin_retrieval_manual_msg"
        android:textColor="@color/primary_txt_inverse"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/pin_entry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pin_top_message"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textColorHint="@color/primary_txt_inverse">

        <android.support.design.widget.TextInputEditText
            android:background="@null"
            android:id="@+id/pin_entry_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:hint="@string/pin_retrieval_bottom_msg"
            android:textColor="@color/primary_txt_inverse"
            android:textColorHint="@color/primary_txt_inverse"
            android:inputType="number"/>
        <View
            android:id="@+id/pin_entry_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/primary_dark"/>
    </android.support.design.widget.TextInputLayout>

    <Button
        yuyong:yuyong_theme_type="background_color"
        android:id="@+id/pin_verify_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pin_entry"
        android:layout_centerHorizontal="true"
        android:paddingStart="80dp"
        android:paddingEnd="80dp"
        android:layout_marginTop="20dp"
        android:text="@string/verify"
        android:textColor="@color/secondary_txt_inverse"
        android:background="@color/btn_primary"/>
</RelativeLayout>