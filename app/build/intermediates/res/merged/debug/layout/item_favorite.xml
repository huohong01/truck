<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:yuyong="http://schemas.android.com/yuyong"
    android:layout_width="110dp"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:layout_weight="1"
    android:padding="5dp">

    <ImageView
        yuyong:yuyong_theme_type="src"
        android:id="@+id/favorite_avatar"
        android:layout_width="@dimen/avatar_large"
        android:layout_height="@dimen/avatar_large"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:padding="5dp"
        android:src="@drawable/empty_avatar"/>

    <TextView
        android:id="@+id/favorite_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/favorite_avatar"
        android:layout_centerHorizontal="true"
        android:text="@string/unknown"
        android:textColor="@color/primary_txt_inverse"
        android:textSize="@dimen/text_medium"
        android:gravity="center_horizontal"
        android:lines="1"/>
</RelativeLayout>