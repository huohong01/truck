<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:yuyong="http://schemas.android.com/yuyong"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="15dp"
    app:mode="same_level"
    app:minDistRequestDisallowParent="1000dp">

    <RelativeLayout
        android:id="@+id/messages_delete"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:background="@color/btn_red">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/delete"
            android:textSize="@dimen/text_medium"
            android:textColor="@color/secondary_txt_inverse"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/messages_content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">

        <ImageView
            yuyong:yuyong_theme_type="src"
            android:id="@+id/messages_avatar"
            android:layout_width="@dimen/avatar_small"
            android:layout_height="@dimen/avatar_small"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:src="@drawable/empty_avatar"/>

        <TextView
            android:id="@+id/messages_avatar_letter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignStart="@+id/messages_avatar"
            android:layout_alignTop="@+id/messages_avatar"
            android:layout_alignEnd="@+id/messages_avatar"
            android:layout_alignBottom="@+id/messages_avatar"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textSize="@dimen/text_large"
            android:textColor="@color/secondary_txt_inverse"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/messages_avatar"
            android:layout_alignBottom="@+id/messages_avatar"
            android:layout_toEndOf="@+id/messages_avatar"
            android:layout_toStartOf="@+id/messages_date_container"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:weightSum="2">

            <TextView
                android:id="@+id/messages_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/unknown"
                android:textSize="@dimen/text_medium_large"
                android:textColor="@color/primary_txt_inverse"
                android:singleLine="true"/>

            <TextView
                android:id="@+id/messages_content"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/error_load"
                android:textSize="@dimen/text_medium"
                android:textColor="@color/secondary_txt"
                android:singleLine="true"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/messages_date_container"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_alignTop="@+id/messages_avatar"
            android:layout_alignBottom="@+id/messages_avatar"
            android:layout_marginEnd="15dp"
            android:orientation="vertical"
            android:weightSum="2">

            <TextView
                android:id="@+id/messages_date"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/date"
                android:textSize="@dimen/text_small_medium"
                android:textColor="@color/secondary_txt"
                android:singleLine="true"/>

            <TextView
                android:id="@+id/messages_time"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/date"
                android:textSize="@dimen/text_small_medium"
                android:textColor="@color/secondary_txt"
                android:singleLine="true"/>
        </LinearLayout>
    </RelativeLayout>
</com.chauthai.swipereveallayout.SwipeRevealLayout>