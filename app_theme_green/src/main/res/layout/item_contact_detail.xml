<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:yuyong="http://schemas.android.com/yuyong"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:baselineAligned="false">

    <ImageView
        yuyong:yuyong_theme_type="src"
        android:id="@+id/detail_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_txt_inverse"
            android:textSize="@dimen/text_medium"/>

        <TextView
            android:id="@+id/detail_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/secondary_txt"
            android:textSize="@dimen/text_small"/>
    </LinearLayout>

    <ImageView
        yuyong:yuyong_theme_type="src"
        android:id="@+id/detail_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:src="@drawable/message"
        android:background="@android:color/transparent"/>

    <ImageView
        yuyong:yuyong_theme_type="src"
        android:id="@+id/detail_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:src="@drawable/video"
        android:background="@android:color/transparent"/>
</LinearLayout>